@{ var action = ViewContext.RouteData.Values["action"].ToString(); }

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="\lib\bootstrap5\dist\css\bootstrap.css">
    <title>CRUD Simples | @action</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">CRUD</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav">
                    <a class="nav-link @(action == "Index" ? "active" : "")" aria-current="page" asp-action="Index">Home</a>
                    <a class="nav-link @(action == "Cadastrar" ? "active" : "")" aria-current="page" asp-action="Cadastrar">Cadastrar</a>
                    <a class="nav-link @(action == "Usuarios" ? "active" : "")" aria-current="page" asp-action="Usuarios">Usu√°rios</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-2">
        @RenderBody()
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        Todos os direitos reservados
        @RenderSection("Footer", false)
    </div>

    @RenderSection("Scripts", false)

</body>

</html>